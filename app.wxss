.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  
} 

view{
  font-family: "微软雅黑"
}

.flex-container{
  display: flex;
  width:100%;
}

.flex-item{
  flex: 1;
}

.xp_input{
  font-size:15px;
  width:80%;
  height:40px; 
  border:solid 1px #2991D0; 
  border-radius: 3px;
  margin: 0 auto;
  margin-top:15px;
  margin-bottom:15px;
  padding-left: 0px;
}

.xp_primarybtn{
  width:80%;
  background-color: #2991D0;
  color:white; 
  height: 40px;
  line-height: 40px;
  font-size:15px;
  margin-top: 15px;
  margin-bottom: 15px;
}
